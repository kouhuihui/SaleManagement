                <div class="row" data-bind="foreach:{data:hotSellings,as:'hotselling'}">
                    <!-- ko if: hotselling.attachments.length >= 1-->
                    <div class="col-sm-4 col-md-3">
                        <div class="thumbnail">

                            <img style="height: 200px; width: 200%; display: block;" data-bind="attr:{src:hotselling.attachments[0].url}">
                            <div class="caption">
                                <p><span>品&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;名：</span><span data-bind="text:name"></span></p>
                                <p><span>版&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;号：</span><span data-bind="text:versionNo"></span></p>
                                <p><span>参考数据：</span><span data-bind="text:referenceData"></span></p>
                                <p><span>参考价格：</span><span data-bind="text:referencePrice" style="color: red"></span></p>


                                <p>
                                    <a class="btn btn-primary btn-sm btn-xs" data-bind="attr:{href:'/customer/order/booking?versionNo='+versionNo}">下单</a>
                                </p>

                            </div>



                        </div>
                    </div>
