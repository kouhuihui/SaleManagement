@model SaleManagement.Core.Models.MainStone
@{
    Layout = null;
}


@using (Html.BeginForm("EditMainStone", "BasicData", FormMethod.Post, new { id = "editMainStone" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h4 class="modal-title">新增/编辑主石信息</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label class="control-label col-md-2" for="Name">
                    <span class="text-danger">*</span>名称
                </label>
                <div class="col-md-4">
                    @Html.TextBoxFor(model => model.Name, new { @class = "form-control", placeholder = "请输入主石名称" })
                    @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2 col-xs-4">
                    风险类别：
                </label>
                <div class="col-md-4 col-xs-4">
                    @{
                        var riskTypes = EnumHelper.GetSelectList(typeof (SaleManagement.Core.Models.RiskType));
                    }
                    @Html.DropDownListFor(m => m.RiskType, riskTypes, "宝石风险级别", new {Class = "pull-left form-control"})
                </div>
            </div>

        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-default" data-dismiss="modal">关闭</a>
            <input class="btn btn-primary" type="submit" value="保存" />
        </div>
    </div>
}

@Scripts.Render("~/bundles/js/jqueryval")
@Scripts.Render("~/bundles/js/ajaxForm")
@Scripts.Render("~/bundles/js/editMainStone")