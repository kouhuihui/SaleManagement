@{
    Title("对账");
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="/home/index">首页</a>
        </li>
        <li>
            <a href="/Reconciliation/list">对账单</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>对账单列表</h2>
                <div class="box-icon">
                    <a data-toggle="modal" href="/Reconciliation/AddPayment" data-target="#modal" class="btn">
                        <i class="glyphicon glyphicon-plus"></i>
                        新增
                    </a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable  responsive">
                    <thead>
                        <tr>
                            <th>客户</th>
                            <th>付/欠款</th>
                            <th>金额(元)</th>
                            <th>日期</th>
                        </tr>
                    </thead>
                    <tbody id="tbody" data-bind="foreach:reconciliations">
                        <tr>
                            <td data-bind="text:customerName"></td>
                            <td data-bind="text:reconciliationTypeName"></td>
                            <td data-bind="text:amount"></td>
                            <td data-bind="text:created"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-center"><ul id="reconciliationListPage"></ul></div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/js/knockout")
    @Scripts.Render("~/bundles/js/pager")
    @Scripts.Render("~/bundles/js/reconciliation/list")
}