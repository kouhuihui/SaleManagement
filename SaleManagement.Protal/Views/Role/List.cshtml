@using Dickson.Core.Common.Extensions
@model IEnumerable<SaleManagement.Core.Models.Role>
@{
    ViewBag.Title = "角色权限";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="/home/index">首页</a>
        </li>
        <li>
            <a href="/role/list">角色权限</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>角色权限管理</h2>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable responsive">
                    <thead>
                        <tr>
                            <th>角色</th>
                            <th>角色描述</th>
                            <th>角色类型</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model != null)
                        {

                            foreach (var item in Model)
                            {
                                <tr>
                                    <td>@item.Name</td>
                                    <td>@item.Description</td>
                                    <td>@item.Type.GetDisplayName()</td>
                                    <td><a href="/systemMenu/Authorized?roleId=@item.Id">菜单权限</a></td>
                                </tr>
                            }
                        }
                        else
                        {
                            <tr>
                                <td colspan="3" class="text-center">暂无数据</td>
                            </tr>
                        }

                    </tbody>
                </table>
            </div>
            <div class="text-center"><ul id="usersListPage"></ul></div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->