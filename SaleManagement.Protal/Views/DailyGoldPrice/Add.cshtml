@model IEnumerable<SaleManagement.Protal.Models.DailyGoldPrice.DailyGoldPriceViewModel>
@{
    Layout = null;
}

@Styles.Render("~/Bundles/Static/Css/DateTimePicker")

@using (Html.BeginForm("Add", "DailyGoldPrice", FormMethod.Post, new { id = "addDailyGoldPriceForm" }))
{
    <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal">×</button>
        <h4 class="modal-title">新增/编辑每日金价</h4>
    </div>
    <div class="modal-body">
        <table class="table table-striped table-bordered bootstrap-datatable  responsive">
            <thead>
                <tr>
                    <th>日期</th>
                    <th>成色</th>
                    <th>价格</th>
                </tr>
            </thead>
            <tbody id="tbody">
                @{
                    var index = 0;
                    foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Date</td>
                            <td>@item.ColorFormName</td>
                            <td>
                                <input type="hidden" name="dailyGoldPriceViewModels[@index].Date" value="@item.Date" />
                                <input type="hidden" name="dailyGoldPriceViewModels[@index].ColorFormId" value="@item.ColorFormId" />
                                <input type="text" name="dailyGoldPriceViewModels[@index].Price" autocomplete="off" />
                            </td>
                        </tr>
                        index++;
                    }
                }
            </tbody>
        </table>
    </div>
    <div class="modal-footer">
        <a href="#" class="btn btn-default" data-dismiss="modal">关闭</a>
        <input class="btn btn-primary" type="submit" value="保存" />
    </div>
                    }
@Scripts.Render("~/bundles/js/dateTimePicker")
@Scripts.Render("~/bundles/js/jqueryval")
@Scripts.Render("~/bundles/js/ajaxForm")
@Scripts.Render("~/bundles/js/dailyGoldPrice/add")
