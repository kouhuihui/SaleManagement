
@{
    Title("金价管理");
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="/home/index">首页</a>
        </li>
        <li>
            <a href="/dailyGoldPrice/list">金价管理</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>每日金价列表</h2>
                <div class="box-icon">
                    <a href="/dailyGoldPrice/Edit" data-toggle="modal" data-target="#modal" class="btn">
                        <i class="glyphicon glyphicon-plus"></i>
                        新增
                    </a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable  responsive">
                    <thead>
                        <tr>
                            <th>日期</th>
                            <th>成色</th>
                            <th>价格</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:prices">
                        <tr>
                            <td data-bind="text:date"></td>
                            <td data-bind="text:colorFormName"></td>
                            <td data-bind="text:price"></td>
                            <td>
                                <a class="btn btn-danger btn-sm" data-bind="click:$parent.deleteClick">删除</a>
                                <a class="btn btn-primary btn-sm" data-bind="click:$parent.editClick">修改</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-center"><ul id="dailyGoldPriceListPage"></ul></div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->

<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/js/knockout")
    @Scripts.Render("~/bundles/js/pager")
    @Scripts.Render("~/bundles/js/dailyGoldPrice/list")
}
