@model SaleManagement.Protal.Models.DailyGoldPrice.DailyGoldPriceViewModel
@{
    Layout = null;
}

@Styles.Render("~/Bundles/Static/Css/DateTimePicker")

@using (Html.BeginForm("Edit", "DailyGoldPrice", FormMethod.Post, new { id = "editDailyGoldPriceForm" }))
{
    @Html.HiddenFor(model => model.Id)
    <div class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h4 class="modal-title">新增/编辑每日金价</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label class="control-label col-md-2" for="Name">
                    <span class="text-danger">*</span>成色
                </label>
                <div class="col-md-6">
                    @{
                        var colorForms = Model.ColorForms.Select(c => new SelectListItem
                        {
                            Value = c.Id.ToString(),
                            Text = c.Name
                        });
                    }
                    @Html.DropDownListFor(model => model.ColorFormId, colorForms, "请选择", new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.ColorFormId, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Date">
                    <span class="text-danger">*</span>日期
                </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Date, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Date, "", new {@class = "text-danger"})
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Price">
                    <span class="text-danger">*</span>金价
                </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.Price, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.Price, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-default" data-dismiss="modal">关闭</a>
            <input class="btn btn-primary" type="submit" value="保存" />
        </div>
    </div>
}
@Scripts.Render("~/bundles/js/dateTimePicker")
@Scripts.Render("~/bundles/js/jqueryval")
@Scripts.Render("~/bundles/js/ajaxForm")
@Scripts.Render("~/bundles/js/dailyGoldPrice/edit")