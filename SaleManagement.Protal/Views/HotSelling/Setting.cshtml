@{
    Title("热销款管理");
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="/home/index">首页</a>
        </li>
        <li>
            <a href="/hotselling/setting">热销款管理</a>
        </li>
    </ul>
</div>
<div class="search">


    @*<button id="btnSearch" class="btn btn-primary">查询</button>*@
</div>
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>热销款列表</h2>
                <div class="box-icon">
                    <a href="/hotselling/edit" class="btn">
                        <i class="glyphicon glyphicon-plus"></i>
                        新增
                    </a>

                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable responsive">
                    <thead>
                        <tr>
                            <th></th>
                            <th>品名</th>
                            <th>版号</th>
                            <th>品类</th>
                            <th>宝石</th>
                            <th>参考数据</th>
                            <th>参考价</th>
                            <th>排序号</th>
                            <th>操作</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:{data:hotSellings,as:'hotselling'}" id="tbody">
                        <tr>
                            <td><input type="checkbox" data-bind="value:id,checked:false" /></td>
                            <td data-bind="text:name"></td>
                            <td data-bind="text:versionNo"></td>
                            <td data-bind="text:productCategory.name"></td>
                            <td data-bind="text:gemCategory.name"></td>
                            <td data-bind="text:referenceData"></td>
                            <td data-bind="text:referencePrice"></td>
                            <td data-bind="text:rowNo"></td>
                            <td>
                                <a class="btn btn-warning btn-sm" data-bind="attr:{href:'/hotselling/Edit?id='+id}">编辑</a>
                                <a class="btn btn-danger btn-sm" data-bind="click:$parent.deleteClick">删除</a>
                            </td>
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-center"><ul id="hotSellingListPage"></ul></div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
<div class="modal fade" id="modal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel"
     aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">

        </div>
    </div>
</div>
@section scripts{
    @Scripts.Render("~/bundles/js/knockout")
    @Scripts.Render("~/bundles/js/pager")
    @Scripts.Render("~/bundles/js/HotSelling/setting")
}
