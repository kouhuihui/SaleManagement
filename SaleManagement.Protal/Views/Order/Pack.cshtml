@model SaleManagement.Protal.Models.Order.OrderPackViewModel
@{
    Layout = null;
}

@using (Html.BeginForm("Pack", "Order", FormMethod.Post, new { id = "packOrderForm" }))
{
    @Html.HiddenFor(model => model.OrderId)
    <div class="form-horizontal">
        <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal">×</button>
            <h4 class="modal-title">打包</h4>
        </div>
        <div class="modal-body">
            <div class="form-group">
                <label class="control-label col-md-2" for="Weight">
                    <span class="text-danger">*</span>总重(g)
                </label>
                <div class="col-md-6">
                     @Html.TextBoxFor(model => model.Weight, new { @class ="form-control" })
                    @Html.ValidationMessageFor(model => model.Weight, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <label class="control-label col-md-2" for="Weight">
                    <span class="text-danger">*</span>净金重(g)
                </label>
                <div class="col-md-6">
                    @Html.TextBoxFor(model => model.GoldWeight, new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.GoldWeight, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="modal-footer">
            <a href="#" class="btn btn-default" data-dismiss="modal">关闭</a>
            <input class="btn btn-primary" type="submit" value="保存" />
        </div>
    </div>
}

@Scripts.Render("~/bundles/js/jqueryval")
@Scripts.Render("~/bundles/js/ajaxForm")
<script type="text/javascript">
    var $from = $("#packOrderForm");
    $(function () {
        $from.ajaxForm({
            success: function (result) {
                if (result.succeeded) {
                    shortTips("保存成功");
                    parent.location.reload();

                } else {
                    shortTips(errorMessage(result));
                }
            }
        });
    })

</script>
