@model SaleManagement.Core.ViewModel.ReportQueryBaseDto
@{
    Title("主石收石报表");
}
@Styles.Render("~/Bundles/Static/Css/DateTimePicker")
<div>
    <ul class="breadcrumb">
        <li>
            <a href="/home/index">首页</a>
        </li>
        <li>
            主石收石报表
        </li>
    </ul>
</div>
<div class="search">
    @Html.Partial("_Customer")
    <div class="textfield pull-left "><div class="field-label" style="width: 60px;">订单号：</div><div class="field-body" style="width: 200px;"><input id="orderId" class="form-control" type="text" placeholder="输入单号,按Enter键查询"></div></div>
    <div class="date-conditions pull-left">
        <div class="textfield pull-left"><div class="field-label" style="width: 100px;">收石日期：</div><div class="field-body" style="width: 100px;"><input class="form-control" id="createdStartDate" type="text" placeholder="开始日期" value="@(Model.StatisticStartDate.HasValue?Model.StatisticStartDate.Value.ToShortDateString():"")"></div></div>
        <span class="pull-left">-</span>
        <div class="textfield pull-left"><div class="field-body" style="width: 100px;"><input class="form-control" id="createdEndDate" type="text" placeholder="结束日期" value="@(Model.StatisticEndDate.HasValue?Model.StatisticEndDate.Value.ToShortDateString():"")"></div></div>
    </div>
    <button id="btnSearch" class="btn btn-primary">查询</button>
</div>
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>主石收石报表</h2>
                <div class="box-icon">
                    <a id="btnExport" class="btn">
                        <i class="glyphicon glyphicon-export"></i>
                        导出
                    </a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable  responsive">
                    <thead>
                    <tr>
                        <th>客户名称</th>
                        <th>单号</th>
                        <th>主石</th>
                        <th>主石大小</th>
                        <th>风险等级</th>
                        <th>收石日期</th>
                    </tr>
                    </thead>
                    <tbody id="tbody" data-bind="foreach:mainStoneStatistics">
                    <tr>
                        <td class="col-md-2" data-bind="text:customerName"></td>
                        <td class="col-md-2" data-bind="text:orderId"></td>
                        <td class="col-md-2" data-bind="text:mainStoneName"></td>
                        <td class="col-md-2" data-bind="text:mainStoneWeight"></td>
                        <td class="col-md-2" data-bind="text:risk"></td>
                        <td class="col-md-2" data-bind="text:created"></td>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
@section scripts{
    @Scripts.Render("~/bundles/js/dateTimePicker")
    @Scripts.Render("~/bundles/js/knockout")
    @Scripts.Render("~/bundles/js/report/mainStoneStatistics")
    @Scripts.Render("~/bundles/js/control/customer")
}