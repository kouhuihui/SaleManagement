@{
    Title("账目报表");
}
@Styles.Render("~/Bundles/Static/Css/DateTimePicker")
<div>
    <ul class="breadcrumb">
        <li>
            <a href="/home/index">首页</a>
        </li>
        <li>
            账目报表
        </li>
    </ul>
</div>
<div class="search">
    @Html.Partial("_Customer")
    <div class="date-conditions pull-left">
        <div class="textfield pull-left"><div class="field-label" style="width: 100px;">统计日期：</div><div class="field-body" style="width: 100px;"><input class="form-control" id="createdStartDate" type="text" placeholder="开始日期"></div></div>
        <span class="pull-left">-</span>
        <div class="textfield pull-left"><div class="field-body" style="width: 100px;"><input class="form-control" id="createdEndDate" type="text" placeholder="结束日期"></div></div>
    </div>
    <button id="btnSearch" class="btn btn-primary">查询</button>
</div>
<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>账目报表</h2>
                <div class="box-icon">
                    <a id="btnExport" class="btn">
                        <i class="glyphicon glyphicon-export"></i>
                        导出
                    </a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable  responsive">
                    <thead>
                        <tr>
                            <th>客户</th>
                            <th>累积消费（元）</th>
                            <th>当前欠款(元)</th>
                        </tr>
                    </thead>
                    <tbody id="tbody" data-bind="foreach:accountStatistics">
                        <tr>
                            <td class="col-md-3" data-bind="text:customerName"></td>
                            <td data-bind="text:paymentInQuery"></td>
                            <td data-bind="text:surplusArrearage"></td>
                        </tr>
                    </tbody>
                </table>
            </div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->
@section scripts{
    @Scripts.Render("~/bundles/js/dateTimePicker")
    @Scripts.Render("~/bundles/js/knockout")
    @Scripts.Render("~/bundles/js/report/accountStatistics")
}