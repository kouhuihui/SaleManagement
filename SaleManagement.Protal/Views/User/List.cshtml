@{
    ViewBag.Title = "用户管理";
}

<div>
    <ul class="breadcrumb">
        <li>
            <a href="/home/index">首页</a>
        </li>
        <li>
            <a href="/user/list">员工管理</a>
        </li>
    </ul>
</div>

<div class="row">
    <div class="box col-md-12">
        <div class="box-inner">
            <div class="box-header well" data-original-title="">
                <h2>员工列表</h2>
                <div class="box-icon">
                    <a href="/user/create" class="btn">
                        <i class="glyphicon glyphicon-plus"></i>
                        新增
                    </a>
                </div>
            </div>
            <div class="box-content">
                <table class="table table-striped table-bordered bootstrap-datatable responsive">
                    <thead>
                        <tr>
                            <th>账号</th>
                            <th>姓名</th>
                            <th>角色</th>
                            <th>手机</th>
                            <th>状态</th>
                        </tr>
                    </thead>
                    <tbody data-bind="foreach:{data:users,as:'user'}">
                        <tr>
                            <td data-bind="text:userName"></td>
                            <td data-bind="text:name"></td>
                            <td data-bind="text:user.role.name"></td>
                            <td data-bind="text:mobile"></td>
                            <!-- ko if:status==0 -->
                            <td>已禁用</td>
                            <!-- /ko -->
                            <!-- ko if:status!=0 -->
                            <td>已启用</td>
                            <!-- /ko -->
                        </tr>
                    </tbody>
                </table>
            </div>
            <div class="text-center"><ul id="usersListPage"></ul></div>
        </div>
    </div>
    <!--/span-->
</div><!--/row-->

@section scripts{
    @Scripts.Render("~/bundles/js/knockout")
    @Scripts.Render("~/bundles/js/pager")
    @Scripts.Render("~/bundles/js/users")
}
